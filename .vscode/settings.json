  // ‚ú® –í–∫–ª—é—á–∞–µ–º Code Snippets (–µ—Å–ª–∏ –∏—Å–ø–æ–ª—å–∑—É–µ—à—å)
  "editor.snippets.codeActions.enabled": true,

  // üö´ –û—Ç–∫–ª—é—á–∞–µ–º –≤—Å—Ç—Ä–æ–µ–Ω–Ω—ã–π —Ñ–æ—Ä–º–∞—Ç—Ç–µ—Ä –¥–ª—è TS/JS, –µ—Å–ª–∏ ESLint –æ—Ç–≤–µ—á–∞–µ—Ç –∑–∞ —Ñ–æ—Ä–º–∞—Ç–∏—Ä–æ–≤–∞–Ω–∏–µ
  "[typescript]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "dbaeumer.vscode-eslint"
  },

  // üé® –î–ª—è SCSS –∏—Å–ø–æ–ª—å–∑—É–µ–º Stylelint
  "[scss]": {
