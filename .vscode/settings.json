{
  // üåç I18n Ally ‚Äî –ø—É—Ç–∏ –∫ –ª–æ–∫–∞–ª—è–º
  "i18n-ally.localesPaths": [
    "public/locales",
    "src/shared/config/i18n"
  ],

  // üß© –§—Ä–µ–π–º–≤–æ—Ä–∫
  "i18n-ally.enabledFrameworks": ["react-i18next"],
  "i18n-ally.framework": "react-i18next",

  // üåê –Ø–∑—ã–∫–∏
  "i18n-ally.sourceLanguage": "en",
  "i18n-ally.displayLanguage": "de",

  // üîë –°—Ç–∏–ª—å –∫–ª—é—á–µ–π –∏ –æ—Ä–≥–∞–Ω–∏–∑–∞—Ü–∏—è
  "i18n-ally.keystyle": "nested",
  "i18n-ally.sortKeys": true,

  // üí¨ –ò–∑–≤–ª–µ—á–µ–Ω–∏–µ –∫–ª—é—á–µ–π
  "i18n-ally.extract.keyPrefix": "article",
  "i18n-ally.extract.autoDetect": true,

  // ‚öôÔ∏è –ü–æ–≤–µ–¥–µ–Ω–∏–µ –≤ —Ä–µ–¥–∞–∫—Ç–æ—Ä–µ
  "i18n-ally.editor.enableCodeActions": true,
  "i18n-ally.editor.preferEditorAction": true,

  // üßπ –ò—Å–ø—Ä–∞–≤–ª–µ–Ω–∏–µ ESLint –ø—Ä–∏ —Å–æ—Ö—Ä–∞–Ω–µ–Ω–∏–∏
  "editor.codeActionsOnSave": {
    "source.fixAll.eslint": "explicit"
